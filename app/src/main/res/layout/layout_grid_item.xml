<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_gridv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@color/colorWhite"/>
    <TextView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广东广州店铺"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorContent"/>
    <TextView
        android:id="@+id/iv_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进口 美国新奇士Sunkist 脐橙 6粒"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorContent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/et_type_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/keig_money"
                android:text="36.0"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/et_type_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/colorOrange"
                android:drawableLeft="@drawable/keig_shop"
                android:text="加入"
                android:textColor="@color/colorWhite"
                 />

    </LinearLayout>



</LinearLayout>